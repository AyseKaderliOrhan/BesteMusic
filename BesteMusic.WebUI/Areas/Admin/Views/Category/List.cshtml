@model List<CategoryListViewModel>

<div>
    <div class="float-start" style="color:darkgoldenrod"><h5>KATEGORİLER</h5></div>
    <div class="float-end"> <a asp-controller="Category" asp-action="New" class="btn btn-outline-secondary rounded-pill">YENİ KATEGORİ</a> </div>
</div>

<div style="padding-top:75px">

    <table class="table table-striped">
        <thead>

            <tr>
                <th>Kategori Adı</th>
                <th></th>
            </tr>

        </thead>

        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id" style="color:forestgreen"><i class="bi bi-pencil"></i>Düzenle</a>
                        <span>/</span>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"  style="color:darkred"><i class="bi bi-trash"></i>Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>