@model LoginViewModel

<form methot="post" asp-controller="Auth" asp-action="Login" class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
    <div class="d-flex">
        <input asp-for="Email" type="email" class="form-control form-control-dark rounded-pill text-bg-dark me-2">
        <input id="pwd" asp-for="Password" type="password" class="form-control form-control-dark rounded-pill text-bg-dark">
        <input id="chk" type="checkbox"/> Şifre Göster
        <button type="submit" class="btn btn-outline-light rounded-pill ms-2"><i class="bi bi-person"></i>Giriş</button>
        <button id="btnIptal" type="button" class="btn btn-outline-secondary rounded-pill ms-2">İptal</button>
    </div>

</form>
